<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="cca_p_mvvm.Views.SettingPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>

        <Frame BackgroundColor="DarkSlateGray">
            <Label Text="{Binding Setting_Frame_Label_}" FontSize="24" TextColor="White" HorizontalOptions="CenterAndExpand"/>
        </Frame>

        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="1" Text="{Binding Setting_Language_Label_}"/>
                <RadioButton Grid.Row="2" Text="{Binding Setting_Radio_ENG_Button_}" IsChecked="{Binding l_Eng_.Is_English_Selected_}"/>
                <RadioButton Grid.Row="3" Text="{Binding Setting_Radio_JAP_Button_}" IsChecked="{Binding l_Jap_.Is_Japanese_Selected_}"/>
            </Grid>
        </StackLayout>

        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Text="{Binding Setting_Accept_Button_}" Command="{Binding Setting_Accept_Button_Command_}"/>
                <Button Grid.Column="2" Text="{Binding Setting_Close_Button_}" Command="{Binding Setting_Close_Button_Command_}"/>
            </Grid>
        </StackLayout>

    </StackLayout>

</ContentPage>